{
    "name": "veltix/laravel-montonio",
    "description": "Laravel integration for the Montonio Payments and Shipping APIs",
    "keywords": ["laravel", "montonio", "payments", "shipping"],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^8.3",
        "veltix/montonio": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^11.0|^12.0|^13.0",
        "illuminate/database": "^11.0|^12.0|^13.0",
        "illuminate/events": "^11.0|^12.0|^13.0",
        "illuminate/http": "^11.0|^12.0|^13.0",
        "illuminate/routing": "^11.0|^12.0|^13.0",
        "illuminate/console": "^11.0|^12.0|^13.0",
        "illuminate/queue": "^11.0|^12.0|^13.0",
        "illuminate/cache": "^11.0|^12.0|^13.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.9.0|^11.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "laravel/pint": "^1.27",
        "larastan/larastan": "^3.0",
        "rector/rector": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Veltix\\LaravelMontonio\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Veltix\\LaravelMontonio\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Veltix\\LaravelMontonio\\MontonioServiceProvider"
            ],
            "aliases": {
                "Montonio": "Veltix\\LaravelMontonio\\Facades\\Montonio"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --type-coverage",
        "lint": "pint",
        "lint:check": "pint --test",
        "analyse": "phpstan analyse",
        "refactor": "rector",
        "refactor:check": "rector --dry-run",
        "qa": [
            "@lint:check",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
